@using System.Text
@model List<Models.Time>

@{
    ViewData["Title"] = "Bem-vindo";
}

@if (Model != null)
{
    <div class="row">

        <div class="col-md-6">

            <h2>Lista de times cadastrados</h2>

        </div>

    </div>

    <div class="row">
        <div class="col-md-2 visible-md visible-lg visible-sm">
            <label>Bandeira</label>
        </div>
        <div class="col-md-2 col-xs-2">
            <label>País</label>
        </div>
        <div class="col-md-2 col-xs-4">
            <label>Técnico</label>
        </div>
        <div class="col-md-2 col-xs-6">
            <label>Ação</label>
        </div>
    </div>


    for (int i = 0; i < Model.Count(); i++)
    {
        <div class="row">

            <div class="col-md-2 visible-md visible-lg visible-sm">
                <image file="@Model[i].Bandeira" width="32" height="24"></image>
            </div>

            <div class="col-md-2 col-xs-2">
                <p>@Model[i].Pais</p>
            </div>

            <div class="col-md-2 col-xs-4">
                <p>@Model[i].NMTecnico</p>
            </div>


            <div class="col-md-2 col-xs-6">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@Model[i].Id">Detalhar</a> |
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model[i].Id">Apagar</a> |
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model[i].Id">Editar</a>
            </div>

        </div>
    }

    <hr />

    <div class="row">
        <div class="col-md-8 text-right">
            <a asp-area="" asp-controller="Home" asp-action="NewTime">Novo time</a>
        </div>
    </div>        
}