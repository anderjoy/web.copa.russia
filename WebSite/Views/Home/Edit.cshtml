@model Models.Time

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Pais" class="control-label"></label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NMTecnico" class="control-label"></label>
                <input asp-for="NMTecnico" class="form-control" />
                <span asp-validation-for="NMTecnico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bandeira" class="control-label">
                    Bandeira <input type="file" accept=".jpg, .png" id="Bandeira" name="Bandeira" hidden />
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
