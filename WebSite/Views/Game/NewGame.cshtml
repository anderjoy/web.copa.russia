@model WebSite.ViewModel.NewGame

@{
    ViewData["Title"] = "Novo Jogo";
}

<h2>Novo Jogo</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewGame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Time1" class="control-label"></label>
                <select asp-for="Time1" asp-items="Model.Times" class="form-control"></select>
                <span asp-validation-for="Time1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time2" class="control-label"></label>
                <select asp-for="Time2" asp-items="Model.Times" class="form-control"></select>
                <span asp-validation-for="Time2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" placeholder="dd/mm/yyyy hh:nn:ss" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
